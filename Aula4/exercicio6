def calculate_average(scores):
    return sum(scores) / len(scores)

student_scores = {}

while True:
    name = input("Enter the student's name (or leave blank to exit): ")

    if name == "":
        break

    score1 = float(input("Enter the student's first score: "))
    score2 = float(input("Enter the student's second score: "))

    student_scores[name] = [score1, score2]

student_name = input("Enter the student's name to calculate the average: ")

if student_name in student_scores:
    average = calculate_average(student_scores[student_name])
    print(f"The average score for {student_name} is {average:.2f}")
else:
    print(f"Student {student_name} not found.")

